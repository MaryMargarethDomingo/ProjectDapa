<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.app.twitter"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="22" />

    <!-- For instrumentation tests -->
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.example.app.SampleApplication"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/twitter_ic_launcher"
        android:label="@string/twitter_app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/TwitterSampleTheme" >
        <activity
            android:name="com.example.app.tweetui.TimelinesActivity"
            android:label="@string/twitter_app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activities for testing TwitterCore -->
        <activity
            android:name="com.example.app.twittercore.TwitterCoreMainActivity"
            android:label="@string/kit_twittercore" />

        <!-- Activities for testing TweetComposer -->
        <activity
            android:name="com.example.app.tweetcomposer.TweetComposerMainActivity"
            android:label="@string/kit_tweetcomposer" />

        <!-- Activities for testing TweetUi -->
        <activity
            android:name="com.example.app.tweetui.XmlTweetActivity"
            android:label="@string/kit_tweetui" />
        <activity
            android:name="com.example.app.tweetui.UniqueTweetActivity"
            android:label="@string/kit_tweetui" />

        <receiver
            android:name="com.example.app.tweetcomposer.TweetSuccessReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.twitter.sdk.android.tweetcomposer.UPLOAD_SUCCESS" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.example.app.tweetcomposer.TweetFailureReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.twitter.sdk.android.tweetcomposer.UPLOAD_FAILURE" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.example.app.tweetcomposer.TweetCancelReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.twitter.sdk.android.tweetcomposer.TWEET_COMPOSE_CANCEL" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.mopub.mobileads.MoPubActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name="com.mopub.mobileads.MraidActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name="com.mopub.common.MoPubBrowser"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name="com.mopub.mobileads.MraidVideoPlayerActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0" />

        <activity
            android:name="com.twitter.sdk.android.tweetcomposer.ComposerActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize|stateVisible" />

        <service
            android:name="com.twitter.sdk.android.tweetcomposer.TweetUploadService"
            android:enabled="true"
            android:exported="false" />

        <uses-library android:name="android.test.runner" />

        <activity
            android:name="com.twitter.sdk.android.tweetui.PlayerActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/MediaTheme" />
        <activity
            android:name="com.twitter.sdk.android.tweetui.GalleryActivity"
            android:theme="@style/MediaTheme" />
        <activity
            android:name="com.twitter.sdk.android.core.identity.OAuthActivity"
            android:configChanges="orientation|screenSize"
            android:excludeFromRecents="true"
            android:exported="false" />

        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.example.app.twitter.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>